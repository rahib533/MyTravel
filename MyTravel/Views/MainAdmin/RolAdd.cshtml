
@{
    ViewBag.Title = "RolAdd";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<div class="container">
    <div class="card card-register mx-auto mt-5">
        <div class="card-header">Rol Əlavə Et</div>
        <div class="card-body">
            <form method="post" action="/MainAdmin/RolAdd">
                <div class="form-group">
                    <div class="form-row">
                        <div class="col-md-12">
                            <div class="form-label-group">
                                <input name="rol" type="text" id="firstName" class="form-control" placeholder="Rol Adi" required="required" autofocus="autofocus">
                                <label for="firstName">Rol adı</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-row">
                        <div class="col-md-12">
                            <div class="form-label-group">
                                <input class="form-control btn btn-primary btn-block" type="submit" value="Elave Et" />
                            </div>
                        </div>
                    </div>
                </div>
            </form>
            <div class="text-center">
                <a class="d-block small mt-3" href="/MainAdmin/Rollar">Geri qayıt</a>
                <a class="d-block small" href="/Admin/Index">Ana səhifə</a>
            </div>
        </div>
    </div>
</div>

