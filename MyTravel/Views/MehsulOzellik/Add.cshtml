
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@model MyTravel.Entity.Mehsul



<div class="container">
    <div class="card card-register mx-auto mt-5">
        <div class="card-header">@Model.Adi mehsuluna Ozellik Əlavə Et</div>
        <div class="card-body">
            <form method="post" action="/MehsulOzellik/Add2">

                <div class="form-group">
                    <div class="form-row">
                        <div class="col-md-3">
                            <div class="form-label-group">
                                <span style="text-align:center; font-size:large"> Kateqoriyasi: </span>
                            </div>
                        </div>
                        <div class="col-md-9">
                            <div class="form-label-group">
                                <select id="kat" class="form-control" name="KategoriyaID">

                                    <option value="@Model.Kategoriya.Id">@Model.Kategoriya.Adi</option>

                                </select>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="form-row">
                        <div class="col-md-3">
                            <div class="form-label-group">
                                <span style="text-align:center; font-size:large"> Mehsul: </span>
                            </div>
                        </div>
                        <div class="col-md-9">
                            <div class="form-label-group">
                                <select id="meh" class="form-control" name="MehsulID">

                                    <option value="@Model.Id">@Model.Adi</option>

                                </select>
                            </div>
                        </div>
                    </div>
                </div>


                <div class="form-group">
                    <div class="form-row">
                        <div class="col-md-3">
                            <div class="form-label-group">
                                <span style="text-align:center; font-size:large">Ozellik Tipi Secin: </span>
                            </div>
                        </div>
                        <div class="col-md-9">
                            <div class="form-label-group">
                                <select id="ozt" class="form-control" name="OzellikTipID">

                                    @{
                                        foreach (var item in Model.Kategoriya.OzellikTip)
                                        {
                                            <option value="@item.Id">@item.Adi</option>
                                        }
                                    }

                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="empty">

                </div>
               
                <div class="form-group">
                    <div class="form-row">
                        <div class="col-md-12">
                            <div class="form-label-group">
                                <input class="form-control btn btn-primary btn-block" type="submit" value="Elave Et" />
                            </div>
                        </div>
                    </div>
                </div>


            </form>
            <div class="text-center">
                <a class="d-block small mt-3" href="/MehsulOzellik/Index">Geri qayıt</a>
                <a class="d-block small" href="/Admin/Index">Ana səhifə</a>
            </div>
        </div>
    </div>
</div>


@section footer{


    <script src="~/Content/Admin/js/sb-admin.min.js"></script>

    <script>
        $(document).ready(function () {

            $("#ozt").click(function () {
                var deyer = $("#ozt").val();

                $.ajax({
                    type: "GET",
                    url: "/MehsulOzellik/OzellikDeyerPW",
                    data: { id: deyer },
                    success: function (gelen) {
                        $("#empty").empty();
                        $("#empty").append(gelen);
                    },
                    error: function () {
                        alert("error");
                    }
                });
            });
        });
    </script>


}