

@model IEnumerable<MyTravel.Entity.Mehsul>

<div class="container-fluid">

    <!-- Breadcrumbs-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="/Admin/Index">Ana Səhifə</a>
        </li>
        <li class="breadcrumb-item active">Cədvəl</li>
    </ol><br />
    <a class="btn btn-info" href="/Mehsul/Index">Sehifeni Yenile</a>
    <br /><br />
    <br />
    <a class="btn btn-primary btn-block" href="/Mehsul/Add">Məhsul Əlavə Et</a>
    <br />
    <!-- DataTables Example -->
    <div class="card mb-3">
        <div class="card-header">
            <i class="fas fa-table"></i>
            Data Table Example
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Adı</th>
                            <th>Aciqlama</th>
                            <th>Satış Qiyməti</th>
                            <th>Endirim</th>
                            <th>Bas tutacaq Tarixi</th>
                            <th>Kateqoriyası</th>
                            <th>Cari Veziyyeti</th>
                            <th>Sekili</th>
                            <th>SIL</th>
                            <th>GÜNCƏLLƏ</th>
                            <th>Shekil</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Adı</th>
                            <th>Aciqlama</th>
                            <th>Satış Qiyməti</th>
                            <th>Endirim</th>
                            <th>Bas tutacaq Tarixi</th>
                            <th>Kateqoriyası</th>
                            <th>Cari Veziyyeti</th>
                            <th>Sekili</th>
                            <th>SIL</th>
                            <th>GÜNCƏLLƏ</th>
                            <th>Shekil</th>
                        </tr>
                    </tfoot>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Adi</td>
                                <td>@item.Aciqlama</td>
                                <td>@item.Qiymeti</td>
                                <td>@item.Endirimi</td>
                                <td>@item.Tarixi</td>

                                @if (item.Kategoriya == null)
                                {
                                    <td>yoxdur</td>
                                }
                                else
                                {
                                    <td>@item.Kategoriya.Adi</td>
                                }
                                @if (item.IsActive == true)
                                {
                                    <td class="bg-success">Active</td>
                                }
                                else
                                {
                                    <td class="btn-danger">Deactive</td>
                                }

                                @if (item.Photos.Count == 0)
                                {
                                    <td>yoxdur</td>
                                }
                                else
                                {
                                    <td><a href="/Mehsul/Sekil/@item.Id">Mehsul Sekili</a></td>
                                }

                                <td><a class="btn btn-primary btn-danger mehsulSil" data-mehsul="@item.Id" href="#">Sil</a></td>
                                <td><a id="guncelle" class="btn btn-primary btn-default" href="/Mehsul/Update/@item.Id">Güncəllə</a></td>
                                <td>
                                    <a class="btn btn-success" href="/Mehsul/PhotoAdd/@item.Id">Shekil elave et</a>
                                </td>
                            </tr>

                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
    </div>

    <p class="small text-center text-muted my-5">
        <em>More table examples coming soon...</em>
    </p>

</div>
