
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@model MyTravel.Entity.Kategoriya

    <div class="container">
        <div class="card card-register mx-auto mt-5">
            <div class="card-header">@Model.Adi Kategoriyasini guncelle</div>
            <div class="card-body">
                <form method="post" action="/Kategoriya/Update2">
                    <input type="hidden" name="Id" value="@Model.Id" />
                    <div class="form-group">
                        <div class="form-row">
                            <div class="col-md-6">
                                <div class="form-label-group">
                                    <input name="Adi" value="@Model.Adi" type="text" id="adi" class="form-control" placeholder="Kategoriya Adi" required="required" autofocus="autofocus">
                                    <label for="adi">Kategoriya adı</label>
                                </div>
                            </div>
                            <br />
                            <div class="col-md-6">
                                <div class="form-label-group">
                                    <input name="Aciqlama" value="@Model.Aciqlama" type="text" id="aciqlama" class="form-control" placeholder="Aciqlama" required="required">
                                    <label for="aciqlama">Aciqlama</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-row">
                            <div class="col-md-12">
                                <div class="form-label-group">
                                    <input class="form-control btn btn-primary btn-block" type="submit" value="Guncelle" />
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
                <div class="text-center">
                    <a class="d-block small mt-3" href="/Kategoriya/Index">Geri qayıt</a>
                    <a class="d-block small" href="/Admin/Index">Ana səhifə</a>
                </div>
            </div>
        </div>
    </div>

