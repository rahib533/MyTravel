
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@model IEnumerable<MyTravel.Entity.OzellikTip>

    <div class="container-fluid">

        <!-- Breadcrumbs-->
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/Admin/Index">Ana Səhifə</a>
            </li>
            <li class="breadcrumb-item active">Cədvəl</li>
        </ol>
        <br />
        <a class="btn btn-info" href="/OzellikTip/Index">Sehifeni Yenile</a>
        <br /><br />
        <br />
        <a class="btn btn-primary btn-block" href="/OzellikTip/Add">Ozellik tipi Əlavə Et</a>
        <br />
        <!-- DataTables Example -->
        <div class="card mb-3">
            <div class="card-header">
                <i class="fas fa-table"></i>
                Data Table Example
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Adı</th>
                                <th>Aciqlama</th>
                                <th>Kategoriyasi</th>
                                <th>Cari Veziyyeti</th>
                                <th>SIL</th>
                                <th>GÜNCƏLLƏ</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Adı</th>
                                <th>Aciqlama</th>
                                <th>Kategoriyasi</th>
                                <th>Cari Veziyyeti</th>
                                <th>SIL</th>
                                <th>GÜNCƏLLƏ</th>
                            </tr>
                        </tfoot>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Adi</td>
                                    <td>@item.Aciqlama</td>
                                    <td>@item.Kategoriya.Adi</td>
                                    @if (item.IsActive == true)
                                    {
                                        <td class="bg-success">Active</td>
                                    }
                                    else
                                    {
                                        <td class="btn-danger">Deactive</td>
                                    }
                                    <td><a class="btn btn-primary btn-danger oztSil" href="#" data-ozt="@item.Id">Sil</a></td>
                                    <td><a class="btn btn-primary btn-default" href="/OzellikTip/Update/@item.Id">Güncəllə</a></td>
                                </tr>

                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
        </div>

        <p class="small text-center text-muted my-5">
            <em>More table examples coming soon...</em>
        </p>
    </div>


@section footer{

    <script src="~/Content/Admin/js/sb-admin.min.js"></script>

    <script>

        $(document).ready(function () {
            $(".oztSil").click(function () {
                var deyer = $(this).data("ozt");

                $.ajax({

                    type: "GET",
                    url: "/OzellikTip/Sil/"+deyer,
                    success: function my() {
                        alert("Ozellik tipi Silindi");
                    },
                    error: function my() {
                        alert("xeta oldu");
                    }

                });
            });
        });

    </script>


}